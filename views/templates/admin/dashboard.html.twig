{# **
 * Module Starter - Dashboard Page Template
 *
 * @var string moduleVersion
 * @var string moduleName
 * @var string layoutTitle
 * #}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
<div class="wepresta_passwordless_login-dashboard">
    {# Welcome Card #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">
                        <i class="material-icons">dashboard</i>
                        {{ 'Dashboard'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                    </h3>
                    <span class="badge badge-info">v{{ moduleVersion }}</span>
                </div>
                <div class="card-body">
                    <h1>{{ 'Welcome to your module dashboard'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</h1>
                    <p class="text-muted">
                        {{ 'This is your module entry point. Customize this page to display important information and statistics.'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                {{ 'Status'|trans({}, 'Admin.Global') }}
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <i class="material-icons text-success">check_circle</i>
                                {{ 'Active'|trans({}, 'Admin.Global') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-info">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                {{ 'Items'|trans({}, 'Admin.Global') }}
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-warning">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                {{ 'Cache'|trans({}, 'Admin.Global') }}
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">3600s</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                {{ 'Version'|trans({}, 'Admin.Global') }}
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ moduleVersion }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-header-title">
                        <i class="material-icons">info</i>
                        {{ 'Getting Started'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                    </h3>
                </div>
                <div class="card-body">
                    <p>{{ 'Start building your module dashboard by customizing this template.'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</p>
                    
                    <h4 class="mt-3">{{ 'Next Steps'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}:</h4>
                    <ul>
                        <li>{{ 'Add statistics and KPIs'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</li>
                        <li>{{ 'Display recent activity or logs'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</li>
                        <li>{{ 'Create quick action buttons'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</li>
                        <li>{{ 'Add charts and visualizations'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            {# Quick Links #}
            <div class="card mb-3">
                <div class="card-header">
                    <h3 class="card-header-title">
                        <i class="material-icons">link</i>
                        {{ 'Quick Links'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action disabled">
                            <i class="material-icons">settings</i>
                            {{ 'Configuration'|trans({}, 'Admin.Global') }}
                        </a>
                        <a href="#" class="list-group-item list-group-item-action disabled">
                            <i class="material-icons">list</i>
                            {{ 'Manage Items'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                        </a>
                    </div>
                </div>
            </div>

            {# Documentation #}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">
                        <i class="material-icons">help_outline</i>
                        {{ 'Documentation'|trans({}, 'Admin.Global') }}
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted small">
                        {{ 'Need help? Check our documentation for detailed guides and API references.'|trans({}, 'Modules.Wepresta\Passwordless\Login.Admin') }}
                    </p>
                    <a href="https://devdocs.prestashop.com" target="_blank" class="btn btn-outline-primary btn-sm btn-block">
                        <i class="material-icons">menu_book</i>
                        {{ 'View Documentation'|trans({}, 'Admin.Actions') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('../modules/' ~ moduleName ~ '/views/css/admin.css') }}">
{% endblock %}

